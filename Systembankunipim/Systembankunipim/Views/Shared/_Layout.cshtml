<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System Bank Unipim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class=" text-center navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom shadow-lg p-3 mb-5 bg-primary rounded ">
            <div class="container">
                <div class="text-center">

                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">System bank unipim</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse text-center">
                    <ul class="navbar-nav flex-grow-1 text-center 2p">
                        <li class="nav-item text-center">
                            <a class="nav-link text-white btn btn-outline-light m-2" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn btn-outline-light m-2" href="https://braziliex.com/?par=cf_marquee_logo">Mercado</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn btn-outline-light m-2" asp-area="" asp-controller="Home" asp-action="QSomos">Quem Somos!</a>
                        </li>
                    </ul>
                </div>
                <div class="float-left">
                    <a class="text-white btn btn-outline-light" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                    <a class="text-white btn btn-outline-light" asp-area="" asp-controller="TbClientes" asp-action="Create">Cadastrar</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div>
            <ul class="nav justify-content-center text-center font-weight">
                <li class="nav-item text-center">
                    &copy; 2020 - System Bank Unipim |
                </li>
                <li><i class="fab fa-instagram"></i></li>
                <li><i class="fab fa-linkedin"></i></li>
                <li><i class="fab fa-github"></i></li>
                <li><i class="fab fa-facebook"></i></li>
            </ul>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/bf7e05c402.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
