@model Systembankunipim.Data.TbCliente

@{
    ViewData["Title"] = "Clientes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    @Model.Nome
                </td>
                <td>
                    @Model.Cnpj
                </td>
                <td>
                    @Model.Cpf
                </td>
                <td>
                    @Model.Email
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.IdCliente">Editar</a> |
                    <a asp-action="Details" asp-route-id="@Model.IdCliente">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@Model.IdCliente">Deletar</a>
                </td>
            </tr>
    </tbody>
</table>
