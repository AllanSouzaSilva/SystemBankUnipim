@model IEnumerable<Systembankunipim.Data.TbTipoTransacao>

@{
    ViewData["Title"] = "Transações";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nova Transações</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoTransacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoTransacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipoTransacao">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipoTransacao">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipoTransacao">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
